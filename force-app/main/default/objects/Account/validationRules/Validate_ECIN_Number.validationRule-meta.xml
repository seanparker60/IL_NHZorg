<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_ECIN_Number</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(EcinNumber__c,&quot;^[0-9,]*$&quot;))</errorConditionFormula>
    <errorDisplayField>EcinNumber__c</errorDisplayField>
    <errorMessage>You are only allowed to populate numbers seperated by commas.</errorMessage>
</ValidationRule>
