<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>max20CharVatNumbers</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(VATNumber__c) &gt; 20</errorConditionFormula>
    <errorDisplayField>VATNumber__c</errorDisplayField>
    <errorMessage>VAT numbers cannot be longer than 20 characters</errorMessage>
</ValidationRule>
