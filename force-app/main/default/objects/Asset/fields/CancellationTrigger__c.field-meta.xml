<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CancellationTrigger__c</fullName>
    <description>Determines whether an Asset needs to be cancelled today</description>
    <externalId>false</externalId>
    <formula>AND(
 CancellationDate__c 				 &lt;= TODAY()+1,
				IsActive__c = true
				)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>CancellationTrigger</label>
    <trackHistory>false</trackHistory>
    <type>Checkbox</type>
</CustomField>
