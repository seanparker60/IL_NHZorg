<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ZorgMustHaveIndexationRate</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  CONTAINS(Name, &apos;Zorg&apos;),  ISNULL(IndexationPercentage__c)  )</errorConditionFormula>
    <errorMessage>Zorg Pricebooks must have an Indexation rate</errorMessage>
</ValidationRule>
